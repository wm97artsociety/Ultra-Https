{
  "manifest_version": 3,
  "name": "Secure HTTPS Enhanced Addon",
  "version": "1.0",
  "description": "Addon to add 10,000 rotating encryption challenges to HTTPS content.",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["https://*/*"],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["src/content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Secure HTTPS Enhanced",
    "default_popup": "demo/secure_https_demo.html"
  }
}
